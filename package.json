{
  "name": "pluga-challenge-front",
  "description": "Pluga Challenge Front - Desafio tÃ©cnico migrado para Next.js",
  "version": "1.0.0",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "check-types": "tsc --pretty --noEmit",
    "check-format": "prettier --check .",
    "check-lint": "eslint . --ext .ts,.tsx,.js",
    "format": "prettier --write .",
    "clear:report": "rm -rf cypress/results",
    "cy:run:component": "TEST=true cypress run --component",
    "cy:open": "TEST=true cypress open",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "commit": "git-cz",
    "mochawesome:merge": "mkdir -p cypress/results/mochawesome-report && mochawesome-merge 'cypress/results/*.json' > cypress/results/mochawesome-report/mochawesome.json && marge cypress/results/mochawesome-report/mochawesome.json -f report -o cypress/results/mochawesome-report --charts",
    "mochawesome:merge:open": "mkdir -p cypress/results/mochawesome-report && mochawesome-merge 'cypress/results/*.json' > cypress/results/mochawesome-report/mochawesome.json && marge cypress/results/mochawesome-report/mochawesome.json -f report -o cypress/results/mochawesome-report --charts --autoOpen=true"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.8",
    "axios": "^1.13.2",
    "next": "^15.1.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@cypress/webpack-dev-server": "^5.1.5",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jest": "^29.5.12",
    "@types/mochawesome": "^6.2.5",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.5",
    "@types/react-dom": "^19.0.3",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "autoprefixer": "^10.4.22",
    "commitizen": "^4.3.1",
    "cypress": "^15.6.0",
    "cz-conventional-changelog": "^3.3.0",
    "daisyui": "^5.5.3",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.1.6",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-sonarjs": "^0.24.0",
    "husky": "^9.0.11",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "postcss": "^8.5.6",
    "prettier": "^3.2.5",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.7.3",
    "webpack": "^5.90.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog",
      "disableScopeLowerCase": true
    }
  }
}
